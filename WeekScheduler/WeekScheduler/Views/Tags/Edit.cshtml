@model WeekScheduler.Models.TagModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TagID" />
            <input type="hidden" asp-for="ActivityID" />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.TagID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TagID)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ActivityID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ActivityID)
                </dd>
            </dl>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Return</a>
</div>
<div>
    <a asp-action="Index">Back to list of tags</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
